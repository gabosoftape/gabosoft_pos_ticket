<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="assets_backend_index" name="index pos ui" inherit_id="point_of_sale.index">
        <xpath expr="//head" position="inside">
            <script type="text/javascript" src="/gabosoft_pos_ticket/static/src/libs/js/jquery-barcode.min.js"/>
            <script type="text/javascript" src="/gabosoft_pos_ticket/static/src/libs/js/jquery-barcode.js"/>
        </xpath>
    </template>

    <template id="assets_backend" name="gabosoft_pos_ticket assets" inherit_id="point_of_sale.assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/gabosoft_pos_ticket/static/src/js/model.js"/>
            <script type="text/javascript" src="/gabosoft_pos_ticket/static/src/js/order.js"/>
            <script type="text/javascript" src="/gabosoft_pos_ticket/static/src/js/screens.js"/>
            <link rel="stylesheet" href="/gabosoft_pos_ticket/static/src/css/aarsol.css"/>
        </xpath>
    </template>
    <template id="report_footer_custom" name="gabosoft_pos_ticket assets coupon" inherit_id="report.external_layout_footer">
        <xpath expr="//div[@id='coupon']" position="replace">
            <div id="coupon">
                <img src="gabosoft_pos_ticket/static/description/coupon.jpg" style="width:50%"/>
            </div>
        </xpath>
    </template>
</odoo>
