<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<t t-extend="PosTicket">
    <t t-jquery="div[class*='pos-sale-ticket']" t-operation="replace">
      <div class="pos-sale-ticket">
      <!-- aqui va el logo de la empresa -->
          <div class="pos-center-align">
             <img src='/web/binary/company_logo' style="width:50%"/>
        </div>
      <!-- aqui termina el logo -->
      <!-- aqui va el header -->
      <t t-if="receipt.header">
              <div style='text-align:center'>
                  <t t-esc="receipt.header" />
              </div>
              <br />
          </t>
      <!-- aqui termina el header -->
      <!-- inicia el tema de la facturacion

          <div class="pos-center-align">Factura Numero:
            <t t-set="pos.config.x_bill_number" t-value="pos.config.x_prefix_resolution + ' ' + '000' + order.sequence_number"/>
             <t t-esc="pos.config.x_bill_number"/></div>y
      termina el tema de la facturacion  -->
          <div class="pos-center-align">
            <t t-esc="order.formatted_validation_date"/>
          </div>
          <div class="pos-center-align">
            <t t-foreach="paymentlines" t-as="line">
              <tr>

                <t t-if="line.name == 'REDEBAN (COP)'" >

                  <span>Factura No. <t t-esc="order.name"/></span>
                </t>
                <t t-if="line.name == 'Efectivo (COP)'" >
                  <t t-set="order.name" t-value="'Orden'+'-00'+order.pos_session_id+'-0'+order.sequence_number"/>
                  <t t-set="widget.pos.order.pos_reference" t-value="order.name"/>
                  <t t-esc="order.pos_reference"/>
                  <t t-esc="order.id"/>

                </t>
              </tr>
            </t>
          </div>
         <br />
          <t t-esc="widget.pos.company.name"/><br />
      <!-- info cliente -->
      <t t-if="order.get_client()">
              Cliente: <t t-esc="order.get_client().name"/><br />
      <!-- termina info cliente -->
          </t>
          <div class="receipt-phone">
              Phone: <t t-esc="widget.pos.company.phone || ''"/><br />
          </div>
          <div class="receipt-user">
              User: <t t-esc="widget.pos.get_cashier().name"/><br />
          </div>

          <br />


          <table class='receipt-orderlines'>
              <colgroup>
                  <col width='50%' />
                  <col width='25%' />
                  <col width='25%' />
              </colgroup>
              <tr t-foreach="orderlines" t-as="orderline">
                  <td>
                      <t t-esc="orderline.get_product().display_name"/>
                       <t t-if="orderline.get_discount() > 0">
                          <div class="pos-disc-font">
                              With a <t t-esc="orderline.get_discount()"/>% discount
                          </div>
                      </t>
                  </td>
                  <td class="pos-right-align">
                      <t t-esc="orderline.get_quantity_str_with_unit()"/>
                  </td>
                  <td class="pos-right-align">
                      <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                  </td>
              </tr>
          </table>
          <br />
          <table class='receipt-total'>
              <tr>
                  <td>Subtotal:</td>
                  <td class="pos-right-align">
                      <t t-esc="widget.format_currency(order.get_total_without_tax())"/>
                  </td>
              </tr>
              <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                  <tr>
                      <td><t t-esc="taxdetail.name" /></td>
                      <td class="pos-right-align">
                          <t t-esc="widget.format_currency(taxdetail.amount)" />
                      </td>
                  </tr>
              </t>
              <tr>
                  <t t-if="order.get_total_discount() > 0">
                      <td>Discount:</td>
                      <td class="pos-right-align">
                          <t t-esc="widget.format_currency(order.get_total_discount())"/>
                      </td>
                  </t>
              </tr>
              <tr class="emph">
                  <td>Total:</td>
                  <td class="pos-right-align">
                      <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
                  </td>
              </tr>
          </table>
          <br />
          <table class='receipt-paymentlines'>
              <t t-foreach="paymentlines" t-as="line">
                <tr>
                    <td>
                        <t t-esc="line.name"/>
                    </td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(line.get_amount())"/>
                    </td>
                </tr>
              </t>
          </table>
          <br />
          <table class='receipt-change'>
              <tr><td>Change:</td><td class="pos-right-align">
                  <t t-esc="widget.format_currency(order.get_change())"/>
                  </td></tr>
          </table>
          <t t-if="receipt.footer">
              <br />
              <div style='text-align:center'>
                  <t t-esc="receipt.footer" />
              </div>
          </t>
      <!-- aqui inicia el codigo de barras -->

      <div align="center" style="margin-top: 3px;">
      <br />
      <div id="barcode_img" style="width: 80vw;">
      </div>
      </div>
      <!-- aqui termina el barcode -->

      </div>


    </t>

</t>
</templates>
